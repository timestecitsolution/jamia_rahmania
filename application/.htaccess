<IfModule mod_rewrite.c>
    RewriteEngine On

    # যদি project subfolder-এ থাকে, uncomment করে path বসাও
    # RewriteBase /vfleet-develop/

    # index.php hide
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php/$1 [L]

    # Sensitive files block
    <FilesMatch "\.(env|log|sql|htaccess|gitignore|git|env\.local|env\.example)$">
        Require all denied
    </FilesMatch>
</IfModule>

<IfModule !mod_rewrite.c>
    ErrorDocument 404 /index.php
</IfModule>
